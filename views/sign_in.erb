<html>
<head>
  <title><%# <%= @title + ':Gerusi' %></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/css/materialize.min.css">
  <script src="/js/materialize.min.js"></script>
  <script src="/js/jquery-2.1.1.min.js"></script>
</head>
<body>
  <%= session[:error] %>
  <div class="row">
    <div class="col s12 m12 l3"></div>
    <div class="col s12 m12 l6">
      <div class="card-panel">
        <div class="row">
          <form class="col s12" 　action="/signin" method="post">
            <h4 class="header2">Login Info.</h4>
              <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input placeholder="いっそくん" type="text" class="validate" name="name">
                <label for="icon_prefix">User Name</label>
              </div>
              <div class="input-field">
                <i class="material-icons prefix">lock_outline</i>
                <input placeholder="isoiso" type="password" class="validate" name="password">
                <label for="icon_password">Password</label>
              </div>
              <div class="input-field right">
                <div class="input-field col s12">
                  <button class="btn cyan waves-effect waves-light" type="submit" name="action">
                    <i class="material-icons">perm_identity</i> ログイン</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col s12 m12 l3"></div>
  </div>

  <style>
  .card-panel{
    margin-top: 100px;
  }
  </style>
</body>
</html>